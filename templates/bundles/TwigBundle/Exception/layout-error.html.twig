{% extends 'base.html.twig' %}

{% block title %}Page introuvable{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/error') }}
{% endblock %}

{% block body %}
    <div class="container">
        <img class="slime" src="{{ asset('build/images/icon/slime.png') }}" alt="image d'un slime.">

        <h1 class="status"><span>{% if status_code == 403 or status_code == 404 or status_code == 500 %}{{ status_text }}{% else %}Page Not Found{% endif %}</span>{{ status_code }}</h1>
    </div>
{% endblock %}