{% extends 'layout/layout-main.html.twig' %}

{% block title %}Contact{% endblock %}

{% block meta %}
    <script>
        void 0 === window._axcb && (window._axcb = []);
        window._axcb.push((axeptio) => {
            axeptio.on("cookies:complete", (choices) => {
                const container = document.querySelector('.maps-contain');
                const maps = document.getElementById('maps');

                if (choices.gmaps && !maps) {
                    const iframe = document.createElement('iframe');
                    iframe.setAttribute('id', 'maps');
                    iframe.setAttribute('src', 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2819.2653025962777!2d3.878451451177281!3d45.039837878995726!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f5fa5336bf4ae7%3A0x9210d60804d0376f!2sUCA%20IUT%20Le%20Puy%20en%20Velay!5e0!3m2!1sen!2sfr!4v1621030766281!5m2!1sen!2sfr')
                    iframe.setAttribute('width', '100%');
                    iframe.setAttribute('height', '100%');
                    iframe.style = "border: 0";
                    iframe.setAttribute('loading', 'lazy');
                    container.append(iframe);
                } else if (!choices.gmaps && maps) {
                    maps.remove();
                }
            })
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/contact') }}
{% endblock %}

